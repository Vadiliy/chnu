                        <div class="add-to-print">
                            <button class="btn btn-success" data-modal="new-mark"><i class="fas fa-pen-alt"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-container new-mark">
        <div class="overlay"></div>
        <div class="modal-content">
            <div class="close">
                <button class="close-btn"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-head">
                <p>Нова оцінка</p>
            </div>
            <div class="modal-form">
                <form action="#">
                    <div class="input-group">
                        <input type="text" name="mark" placeholder="Нова оцінка" />
                        <button class="confirm btn btn-success">OK</button>
