<body class="admin">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-8">
                <div class="button-group">
                    <button class="btn btn-info filter-btn" type="button" title="Фильтр" data-toggle="filter-form"><i class="fas fa-filter"></i></button>
                    <button class="btn btn-info print-btn" type="submit" data-confirm="retakeToPrint" title="На печать"><i class="fas fa-print"></i></button>
                </div>
                <form class="filter-form flex" action="#">
                    <div class="select-wrap flex">
                        <select id="discipline" name="discipline">
                            <option value="" selected="selected">Предмет</option>
                        </select>
                        <select id="student" name="student">
                            <option value="" selected="selected">Ф.И.О. Студента</option>
                        </select>
                        <input class="group fakeSelect" type="text" name="group" placeholder="Групппа" />
                        <div class="fakeSelect discipline" data-select-to="discipline">
                            <div class="selected flex">
                                <p>Предмет</p>
                                <button type="button"><i class="fas fa-chevron-down"></i></button>
                            </div>
                            <div class="selectOption">
                                <div class="option">
                                    <p data-select="discipline 1">Предмет 1</p>
                                </div>
                                <div class="option">
                                    <p data-select="discipline 2">Предмет 2</p>
                                </div>
                                <div class="option">
                                    <p data-select="discipline 3">Предмет 3</p>
                                </div>
                                <div class="option">
                                    <p data-select="discipline 4">Предмет 4</p>
                                </div>
                                <div class="option">
                                    <p data-select="discipline 5">Предмет 5</p>
                                </div>
                                <div class="option">
                                    <p data-select="discipline 6">Предмет 6</p>
                                </div>
                            </div>
                        </div>
                        <div class="fakeSelect student" data-select-to="student">
                            <div class="selected flex">
                                <p>Ф.И.О. Студента</p>
                                <button type="button"><i class="fas fa-chevron-down"></i></button>
                            </div>
                            <div class="selectOption">
                                <div class="option">
                                    <p data-select="student 1">Студент 1</p>
                                </div>
                                <div class="option">
                                    <p data-select="student 2">Студент 2</p>
                                </div>
                                <div class="option">
                                    <p data-select="student 3">Студент 3</p>
                                </div>
                                <div class="option">
                                    <p data-select="student 4">Студент 5</p>
                                </div>
                                <div class="option">
                                    <p data-select="student 5">Студент 5</p>
                                </div>
                                <div class="option">
                                    <p data-select="student 6">Студент 6</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="confirm">
                        <button class="btn btn-success confirm-btn"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <form class="retake-list" action="#" id="retakeToPrint">
                    <div class="retake-item flex">
                        <div class="checkbox">
                            <input type="checkbox" name="toPrint" value="1" id="1" />
                            <label for="1"></label>
                        </div>
                        <div class="new-mark">
                            <button class="new btn new">New</button>
                        </div>
                        <div class="student flex">
                            <div class="group">
                                <p>205</p>
                            </div>
                            <div class="name">
                                <p>Студент1</p>
                            </div>
                        </div>
                        <div class="add-to-print">
